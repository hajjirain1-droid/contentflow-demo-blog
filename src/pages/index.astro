---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="ContentFlow Blog" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Blog</title>
  </head>
  <body>
    <main class="max-w-4xl mx-auto px-4 py-8">
      <h1 class="text-5xl font-bold mb-8">Blog</h1>

      {posts.length === 0 && (
        <div class="text-center py-12 text-gray-500">
          <p>No posts yet. Articles published by ContentFlow will appear here.</p>
        </div>
      )}

      <div class="grid gap-8">
        {posts.map((post) => (
          <article class="border rounded-lg p-6 hover:shadow-lg transition-shadow">
            <a href={`/blog/${post.slug}/`}>
              {post.data.heroImage && (
                <img
                  class="w-full h-48 object-cover rounded-lg mb-4"
                  src={post.data.heroImage}
                  alt={post.data.title}
                />
              )}
              <h2 class="text-2xl font-bold mb-2 hover:text-blue-600">
                {post.data.title}
              </h2>
              <p class="text-gray-600 mb-2">{post.data.description}</p>
              <time class="text-sm text-gray-500">
                {new Date(post.data.pubDate).toLocaleDateString('en-us', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </time>
            </a>
          </article>
        ))}
      </div>
    </main>
  </body>
</html>
